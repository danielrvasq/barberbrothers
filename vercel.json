{
  
  "crons": [
    { "path": "/api/daily-reminders", "schedule": "0 12 * * *" }
  ],

  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "outputDirectory": "dist",

  
  "rewrites": [
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}
